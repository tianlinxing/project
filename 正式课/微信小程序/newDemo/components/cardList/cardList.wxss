.box {
    display: flex;
    justify-content: start;
    padding: 20rpx;
    border-bottom: 1px solid rgb(119, 118, 118);
}

.card-left {
    width: 30%;
}

.card-left .card-logo {
    width: 100%;
    height: 150rpx;
}

.card-right {
    width: 70%;
    display: flex;
    flex-direction: column;
    font-size: 32rpx;
    padding-left: 20rpx;
}

.card-right .title {
    font-size: 40rpx;
    margin-bottom: 15rpx;
}

.card-right .content {
    color: rgb(54, 53, 53);
}

.tags text {
    font-size: 24rpx;
    border: 1px solid gold;
    padding: 0 10rpx;
    color: rgb(241, 198, 4);
    margin-right: 10rpx;
    background: rgba(224, 202, 72, 0.158);
}
